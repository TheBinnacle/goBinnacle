<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Category", :category %></th>
			<th><%= casein_sort_link "Title", :title %></th>
			<th><%= casein_sort_link "Author", :author %></th>
			<th><%= casein_sort_link "Date", :date %></th>
			<th><%= casein_sort_link "Story", :story %></th>
			<th><%= casein_sort_link "Image", :image %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% stories.each do |story| %>
		<tr>
			<td><%= casein_table_cell_link story.category, casein_story_path(story) %></td>
			<td><%= casein_table_cell_link story.title, casein_story_path(story) %></td>
			<td><%= casein_table_cell_link story.author, casein_story_path(story) %></td>
			<td><%= casein_table_cell_link story.date, casein_story_path(story) %></td>
			<td><%= simple_format (casein_table_cell_link story.story, casein_story_path(story)) %></td>
			<td><%= casein_table_cell_link story.image, casein_story_path(story) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_story_path(story), :method => :delete, :data => { :confirm => "Are you sure? The Golden Bear may shed a silent tear." }) %>
			</td>
		</tr>
	<% end %>
</table>