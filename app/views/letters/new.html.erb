<div align="center">
	<h3>
		Write a letter to the editor.
	</h3>

	<%= simple_form_for @letter, :html => {:class => 'form-horizontal'} do |f| %>
		<%= f.inout :name, :required => true %>
    <%= f.input :email, :required => true %>
    <%= f.input :letter, :as => :text, :required => true %>
    <div class="hidden">
      <%= f.input :nickname, :hint => 'Leave this field blank!' %>
    </div>
    <div>
      <br>
      <%= f.button :submit, 'Send Letter', :class => "btn btn-primary" %>
    </div>
    <% end %>
</div>