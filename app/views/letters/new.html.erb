<div align="center">
	<h3>
		Send a letter to the editor or submit a story.
	</h3>
  <p>
    We appreaciate your feedback and story ideas.
  </p>
<div class="container">
  <div class="row">
  	<%= simple_form_for @letter, :html => {:class => 'form-horizontal'} do |f| %>
  		<div class="col-md-6">
        <%= f.input :name, :required => true %>
      </div>
      <div class="col-md-6">
        <%= f.input :email, :required => true %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <%= f.input :letter, :as => :text, :required => true %>
      </div>
    </div>
      <div class="hidden">
        <%= f.input :nickname, :hint => 'Leave this field blank!' %>
      </div>
      <div>
        <br>
        <%= f.button :submit, 'Send Letter', :class => "btn btn-primary" %>
      </div>
      <% end %>
      <br>
    </div>
  </div>
</div>